[core]
	editor = vim
	excludesfile = ~/.gitignore_global
	autocrlf = input

[init]
	defaultBranch = main

[pull]
	rebase = false

[push]
	default = simple

[alias]
	st = status
	co = checkout
	br = branch
	ci = commit
	unstage = reset HEAD --
	last = log -1 HEAD
	lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit

[color]
	ui = auto

[diff]
	colorMoved = zebra

[merge]
	conflictstyle = diff3

[fetch]
	prune = true

[include]
	path = ~/.gitconfig.local